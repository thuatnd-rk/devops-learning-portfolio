{
  "family": "bedrock-agent-chatbot",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::187091248012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::187091248012:role/ecsTaskExecutionRole",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "bedrock-chatbot",
      "image": "placeholder",
      "cpu": 0,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8501,
          "hostPort": 8501,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-southeast-1"
        }
      ],
      "secrets": [
        {
          "name": "AGENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:187091248012:secret:bedrock-chatbot-m0iwh4:AGENT_ID::"
        },
        {
          "name": "ALIAS_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:187091248012:secret:bedrock-chatbot-m0iwh4:ALIAS_ID::"
        },
        {
          "name": "API_ENDPOINT_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:187091248012:secret:bedrock-chatbot-m0iwh4:API_ENDPOINT_URL::"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:187091248012:secret:bedrock-chatbot-m0iwh4:AWS_ACCESS_KEY_ID::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:187091248012:secret:bedrock-chatbot-m0iwh4:AWS_SECRET_ACCESS_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bedrock-agent-chatbot",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true",
          "mode": "non-blocking",
          "max-buffer-size": "25m"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
           "curl -sS -f http://localhost:8501 -o /dev/null || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 120
      }
    }
  ],
  "volumes": []
}